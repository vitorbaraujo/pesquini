<div class =" lowercase-letter">

  <% @sanctions.each_with_index do |p, index| %>
    <h4>
      <b><div class= "index_number"><%= @page_num*@per_page + index +1%></div></b>
    </h4>
    <h4>
      <b>Órgao Sancionador: </b> <%= p.sanction_organ.downcase! %>
    </h4>
    <h4>
      <b> Número do processo: </b> <%= p.process_number %>
    </h4>
    <h4>
      <% if !p.initial_date.nil? %>
        <% dis = "Dado nao informado" %>
      <% else %>
        <% dis = p.initial_date.strftime("%d/%m/%Y") %>
      <% end %>
      <b>Data de Inicio da Sanção: </b> <%= dis %>
    </h4>
    <h4>
      <% if !p.final_date.nil?%>
        <% dfs = p.final_date.strftime("%d/%m/%Y") %>
      <% else %>
        <% dfs = "Dado nao informado" %>
      <% end %>
      <b> Data Final da Sanção: </b> <%= dfs %>
    </h4>
    <h4>
      <% if !p.state.nil?%>
        <% u = p.state.abbreviation %>
      <% else %>
        <% u = "Dado nao informado" %>
      <% end %>
      <b> UF: </b> <%= u %>
    </h4>
    <h4>
      <% if !p.sanction_type.nil? %>
        <% ts = p.sanction_type.description.downcase! %>
      <% else %>
        <% ts = "Dado não informado" %>
      <% end %>

      <b> Tipo Sanção: </b> <%= ts %>
    </h4>

    <% if @enterprise.payment_after_sanction? %>
      <h4>
        Contrato pós Sanção? : <span class="glyphicon glyphicon-ok">
      </h4>
    <% else %>
      <h4>
        Contrato pós Sanção? : <span class="glyphicon glyphicon-remove">
      </h4>
    <% end %>

    <hr align="left">
  <% end %>

  <% if @sanctions.empty? %>
    <h3> Dados sobre sanções não informados </h3>
  <% else %>
    <!-- nothing to do -->
  <% end %>

  <%= will_paginate @sanctions,  renderer: BootstrapPagination::Rails %>

</div>