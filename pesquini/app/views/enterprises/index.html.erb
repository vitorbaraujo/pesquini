<div id="enterprises_index">

  <div class="search_form">

    <div class="container">

      <div class="service">
      </div>

      <div class="search_form_enterprises">

        <h1>Ferramenta de busca</h1>
        <hr>

        <%= search_form_for @search do |form_attributes| %>
          <%= form_attributes.label :corporate_name_cont, "Nome ou CNPJ:" %>
          <%= form_attributes.search_field :corporate_name_cont%>
          <%= form_attributes.submit %>
        <% end %>

      </div>

    </div>

  </div>

  <span class="division">
    <hr>
  </span>

  <div class="container">

    <% if !@enterprises.blank? %>
      <div class="entreprises_title">
        <h1> Lista das empresas encontradas</h1>
        <hr>
      </div>

      <% @enterprises.each do |enterprise| %>
        <span class="same_line">  <h3>Empresa:</h3><%= link_to enterprise.corporate_name, enterprise %>  </span>
        <span class="same_line">  <h3>CNPJ:</h3> <%= enterprise.cnpj %>  </span>
        <hr>
      <% end %>
    <% else %>
      <div class="entreprises_title">
        <h3>
          Não existem sanções contra a empresa procurada.
        </h3>
        <hr>
      </div>
    <% end %>

    <div class="pagination">
      <%= will_paginate @enterprises, renderer: BootstrapPagination::Rails %>
    </div>

  </div>

</div>
