# This view list the messages

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
  <%= link_to data-dismiss="alert" class="close", "#" %> 
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
  </div>
<% end %>