<div class="container">
  <% enterprise_list = "Lista de empresas com #{@quantidade} sanções" %>
  <div id="titulo_ranking">
    <h2>
      <%= enterprise_list %>
    </h2>
    <hr>
  </div>
  <%@enterprises.each_with_index do |enterprise, index| %>
    <% position = "#{index + 1} )" %>
    <h3><%= position %><%= link_to enterprise.corporate_name, enterprise %><br></h3>
  <% end %>
  <%= will_paginate @enterprises,  renderer: BootstrapPagination::Rails %>

</div>
